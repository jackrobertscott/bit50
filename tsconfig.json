{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
